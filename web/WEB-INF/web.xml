<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SubjectSearch</servlet-name>
        <servlet-class>controller.SubjectSearch</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubjectDetail</servlet-name>
        <servlet-class>controller.SubjectDetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginAdminStaff</servlet-name>
        <servlet-class>controller.LoginAdminStaff</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutAdminStaff</servlet-name>
        <servlet-class>controller.LogoutAdminStaff</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCurriculum</servlet-name>
        <servlet-class>controller.AddCurriculum</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountManagement</servlet-name>
        <servlet-class>controller.AccountManagement</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CurrirculumDetails</servlet-name>
        <servlet-class>controller.CurrirculumDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUser</servlet-name>
        <servlet-class>controller.DeleteUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddUser</servlet-name>
        <servlet-class>controller.AddUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubjectSearch</servlet-name>
        <url-pattern>/subsearch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubjectDetail</servlet-name>
        <url-pattern>/subjectdetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginAdminStaff</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutAdminStaff</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCurriculum</servlet-name>
        <url-pattern>/addcurriculum</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountManagement</servlet-name>
        <url-pattern>/accManage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CurrirculumDetails</servlet-name>
        <url-pattern>/curriculumdetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteUser</servlet-name>
        <url-pattern>/deleteUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddUser</servlet-name>
        <url-pattern>/adduser</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
